{
  "name": "api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node ./dist/index.js",
    "setup": "npm install && cd client && npm install",
    "server": "ts-node src/index.ts",
    "server:nodemon": "nodemon src/index.ts",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server:nodemon\" \"npm run client\""
  },
  "dependencies": {
    "@apollo/server": "^4.9.2",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.17",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "glob": "^10.3.3",
    "graphql": "^16.8.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/js-yaml": "^4.0.5",
    "concurrently": "^8.2.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}